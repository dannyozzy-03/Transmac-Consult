                    <div class="map-marker map-marker-office" style="left: 74%; top: 54%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="28" height="28" viewBox="0 0 28 28">
                                <circle cx="14" cy="14" r="8" fill="#dc2626" stroke="white" stroke-width="2.5"/>
                                <circle cx="14" cy="14" r="3" fill="white"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">Malaysia</div>
                    </div>

                    <!-- Partnership - China (BLUE) - Eastern China -->
                    <div class="map-marker map-marker-partnership" style="left: 78%; top: 38%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="26" height="26" viewBox="0 0 26 26">
                                <circle cx="13" cy="13" r="7" fill="#2563eb" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">China</div>
                    </div>

                    <!-- Partnership - Thailand (BLUE) - North of Malaysia -->
                    <div class="map-marker map-marker-partnership" style="left: 72%; top: 48%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="26" height="26" viewBox="0 0 26 26">
                                <circle cx="13" cy="13" r="7" fill="#2563eb" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">Thailand</div>
                    </div>

                    <!-- Partnership - India (GREEN) - Subcontinent -->
                    <div class="map-marker map-marker-project" style="left: 65%; top: 46%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="26" height="26" viewBox="0 0 26 26">
                                <circle cx="13" cy="13" r="7" fill="#16a34a" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">India</div>
                    </div>

                    <!-- Partnership - Australia (GREEN) - Oceania -->
                    <div class="map-marker map-marker-project" style="left: 83%; top: 76%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="26" height="26" viewBox="0 0 26 26">
                                <circle cx="13" cy="13" r="7" fill="#16a34a" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">Australia</div>
                    </div>

                    <!-- Project Reach - Brazil (GREEN) - South America -->
                    <div class="map-marker map-marker-project" style="left: 30%; top: 65%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="26" height="26" viewBox="0 0 26 26">
                                <circle cx="13" cy="13" r="7" fill="#16a34a" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="marker-label permanent-label">Brazil</div>
                    </div>

                </div>
            </div>

            <!-- TMC Logo Watermark -->
            <div class="map-logo-watermark">
                <img src="~/images/TMC-logo.png" alt="TMC Logo" />
            </div>
        </div>
    </div>

    <div class="content-section offices-section" data-scroll-section>
        <div class="container">
            <h2 data-scroll>Our Offices</h2>
            
            <div class="grid-2">
                <div class="card">
                    <h3>Singapore Office</h3>
                    <p><strong>Headquarters</strong></p>
                    
                    <p style="margin-top: 1.5rem;"><strong>Address:</strong></p>
                    <p>1 Leicester Road #06-11<br />Singapore 358828</p>
                    
                    <p style="margin-top: 1.5rem;"><strong>Contact Information:</strong></p>
