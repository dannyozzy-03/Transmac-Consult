        <div class="container">
            <h1 data-scroll style="color: white;">Regional Presence</h1>
            <p data-scroll style="color: white;">Your Tailored Solutions Partner Across Asia and Beyond</p>
        </div>
    </div>

    <!-- Interactive Global Map Section -->
    <div class="global-reach-section" data-scroll-section>
        <div class="container">
            <div class="section-header" data-scroll data-scroll-animation="fade-up">
                <h2>Our Global Reach</h2>
                <p>Strategic offices in Singapore and Malaysia, with partnerships and project delivery across multiple continents</p>
            </div>

            <!-- Map Legend -->
            <div class="map-legend" data-scroll data-scroll-animation="fade-up">
                <div class="map-legend-item" data-type="office">
                    <span class="legend-marker office-marker"></span>
                    <span class="legend-text">Offices</span>
                </div>
                <div class="map-legend-item" data-type="partnership">
                    <span class="legend-marker partnership-marker"></span>
                    <span class="legend-text">Partnerships</span>
                </div>
                <div class="map-legend-item" data-type="project">
                    <span class="legend-marker project-marker"></span>
                    <span class="legend-text">Project Reach</span>
                </div>
            </div>

            <!-- Interactive Map Container -->
            <div class="global-map-wrapper" data-scroll data-scroll-animation="scale-up">
                <div class="global-map-container">
                    <!-- World Map Background Image -->
                    <div class="world-map-background"></div>
                    
                    <!-- Headquarters - Singapore (RED) - More centered in SE Asia -->
                    <div class="map-marker map-marker-office headquarters" style="left: 76%; top: 57%;">
                        <div class="marker-pulse"></div>
                        <div class="marker-pin">
                            <svg width="32" height="32" viewBox="0 0 32 32">
                                <circle cx="16" cy="16" r="9" fill="#dc2626" stroke="white" stroke-width="2.5"/>
                                <circle cx="16" cy="16" r="4" fill="white"/>
