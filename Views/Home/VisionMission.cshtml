@{
    ViewData["Title"] = "Vision & Mission";
}

@await Html.PartialAsync("_LocomotiveScrollStyles")

<style>
    .vision-mission-wrapper {
        position: relative;
        min-height: 200vh;
        background: url('/images/background/background2.jpg') center/cover no-repeat fixed;
    }

    .vision-mission-wrapper::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
        pointer-events: none;
    }

    .vision-section,
    .mission-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        z-index: 2;
        padding: 4rem 2rem;
    }

    .vision-section {
        justify-content: flex-start;
    }

    .mission-section {
        justify-content: flex-end;
    }

    .hero-content-wrapper {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 800px;
    }

    .glassy-container {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        flex: 1;
        transition: all 0.4s ease;
        opacity: 0;
        transform: translateX(0);
    }

    .glassy-container.is-inview {
        opacity: 1;
    }

    .glassy-container:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 48px 0 rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .glassy-container h2 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #ffffff;
        letter-spacing: -0.02em;
    }

    .glassy-container h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #ffffff;
    }

    .glassy-container p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 1rem;
    }

    .glassy-container p strong {
        color: #ffffff;
        font-weight: 600;
    }

    .scroll-indicator {
        position: absolute;
        bottom: 3rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        text-align: center;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        animation: bounce 2s infinite;
    }

    .scroll-indicator i {
        display: block;
        margin-top: 0.5rem;
        font-size: 1.5rem;
        font-style: normal;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateX(-50%) translateY(0);
        }
        40% {
            transform: translateX(-50%) translateY(-10px);
        }
        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }

    .values-section {
        padding: 8rem 2rem;
        background: #ffffff;
        position: relative;
    }

    .values-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .values-container h2 {
        font-size: 3rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 6rem;
        color: #1a1a1a;
        letter-spacing: -0.02em;
    }

    .values-timeline {
        position: relative;
        padding: 2rem 0;
    }

    /* Connecting Line */
    .timeline-line {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 4px;
        height: 100%;
        background: linear-gradient(180deg, 
            transparent 0%,
            rgba(102, 126, 234, 0.4) 10%,
            rgba(118, 75, 162, 0.4) 90%,
            transparent 100%
        );
        z-index: 1;
    }

    .value-item {
        position: relative;
        margin-bottom: 8rem;
        opacity: 0;
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .value-item.is-inview {
        opacity: 1;
    }

    .value-item:nth-child(odd) {
        padding-right: 55%;
        transform: translateX(-50px);
    }

    .value-item:nth-child(even) {
        padding-left: 55%;
        transform: translateX(50px);
    }

    .value-item.is-inview {
        transform: translateX(0);
    }

    .value-item:last-child {
        margin-bottom: 0;
    }

    /* Timeline Dots */
    .timeline-dot {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        border: 4px solid #1e1e1e;
        z-index: 2;
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .value-item:hover .timeline-dot {
        width: 32px;
        height: 32px;
        box-shadow: 0 0 0 6px rgba(255, 255, 255, 0.3);
    }

    .value-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 20px;
        padding: 3rem;
        transition: all 0.4s ease;
        position: relative;
        box-shadow: 
            0 10px 40px rgba(0, 0, 0, 0.12),
            0 4px 20px rgba(102, 126, 234, 0.08),
            0 2px 10px rgba(118, 75, 162, 0.06),
            inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }

    .value-card::before {
        content: '';
        position: absolute;
        top: 50%;
        width: 40px;
        height: 2px;
        background: rgba(102, 126, 234, 0.4);
        z-index: 0;
    }

    .value-item:nth-child(odd) .value-card::before {
        right: -40px;
        transform: translateY(-50%);
    }

    .value-item:nth-child(even) .value-card::before {
        left: -40px;
        transform: translateY(-50%);
    }

    .value-card:hover {
        background: rgba(255, 255, 255, 0.9);
        transform: translateY(-15px);
        border-color: rgba(102, 126, 234, 0.5);
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.18),
            0 8px 30px rgba(102, 126, 234, 0.15),
            0 4px 15px rgba(118, 75, 162, 0.12),
            inset 0 1px 0 rgba(255, 255, 255, 1);
    }

    .value-card h3 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.2rem;
        color: #ffffff;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .value-card p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333333;
    }

    @@media (max-width: 968px) {
        .glassy-container h2 {
            font-size: 2.2rem;
        }

        .glassy-container h3 {
            font-size: 1.3rem;
        }

        .glassy-container p {
            font-size: 1rem;
        }

        .values-container h2 {
            font-size: 2.2rem;
        }

        .timeline-line {
            left: 30px;
        }

        .value-item:nth-child(odd),
        .value-item:nth-child(even) {
            padding-left: 80px;
            padding-right: 0;
        }

        .timeline-dot {
            left: 30px;
        }

        .value-item:nth-child(odd) .value-card::before {
            left: -40px;
            right: auto;
        }

        .value-card {
            padding: 2rem;
        }

        .value-card h3 {
            font-size: 1.6rem;
        }

        .value-card p {
            font-size: 1rem;
        }
    }
</style>

